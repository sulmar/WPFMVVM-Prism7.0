<UserControl x:Class="Prism.Hello.Views.ViewA"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Prism.Hello.Views"
             xmlns:vm="clr-namespace:Prism.Hello.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <vm:ViewAViewModel />
    </UserControl.DataContext>
    <Grid>

        <StackPanel>
            <TextBox Text="{Binding FirstName}" />
            <TextBox Text="{Binding LastName}" />
            <TextBlock Text="{Binding LastUpdated}" />
            <Button Command="{Binding UpdateCommand}" Content="Update" />
        </StackPanel>
            
    </Grid>
</UserControl>
